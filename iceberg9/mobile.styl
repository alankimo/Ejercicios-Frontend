@import 'vars.styl'
/*------------------------------------------------------------------------------------ generales*/
body
	font-family open
h2
	font-weight 700
	text-align center
	font-size 1.8em
/*------------------------------------------------------------------------------------ header*/
header
	border-bottom solid 2px #efefef
	.logo
		margin-top 10px
		padding-bottom 10px
		text-align right
		
		img
			width 80%
			height auto
	.trigermenu
		font-size 1.8em
		text-align left
		position relative
		top 15px
/*------------------------------------------------------------------------------------ about*/
.about
	.content
		text-align justify
		a
			color azulsuave
/*------------------------------------------------------------------------------------ servicios*/
.serv4
	text-align center
	.ico
		font-size 2em
		color azulsuave
	.name
		h4
			font-weight 600
/*------------------------------------------------------------------------------------ contacto*/
#contacto
	background-image url(assets/emperadores.png)
	background-repeat no-repeat
	background-size cover
	height 100%
	.title
		color #fff
		text-align center
		position relative
		top 10px
		h2
			font-size 2.2em
			font-weight 400
	.subtitle
		color #fff
		text-align center
		position relative
		top 10px
		margin-bottom 20px
		
.form-contact-mini
		width 76%
		margin 0 auto
		form
			.btn-azul
				background rgba(76,208,244,.75);
				width 97%
				font-size 1em
				transition(.2s)
				&:hover
					background rgba(239,239,239,.75);
				
			input
				background-color rgba(0,0,0,0.49);
				border none
				padding 5px
				margin 5px
				border-radius(5px)
				color #fff
textarea
	width 97%
	margin-left 5px
	border-radius(5px)
	height 120px
	margin-top 5px
	background-color rgba(0,0,0,0.49);
	color #fff
	border none
.social
	text-align center
	margin-top 170px
	font-size 2em
	a
		transition(.2s)
		&:hover
			text-decoration none
.tri
	background-image url(assets/blanco.png)
	background-position 50% 0
	background-repeat no-repeat
	position relative
	top 20px
	width 100%
	height auto
	
.flecha
	text-align center
	position relative
	top 1px
	a
		color azul
		transition(.2s)
		&:hover
			color azulsuave
footer
	background-color #fff
	padding 20px 0
	text-align center
