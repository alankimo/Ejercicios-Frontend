@import 'vars.styl'
/*------------------------------------------------------------------------------------ generales*/
body
	font-family open
h2
	font-weight 700
/*------------------------------------------------------------------------------------ header*/

header
	background-image url(assets/header.png)
	background-repeat no-repeat
	background-size contain
	height 416px
	border-bottom solid 2px #efefef
	.logo
		position relative
		top 330px
.navbar
	nav
		position relative
		top 355px
		ul
			margin-right 120px
			text-align right
			li
				display inline-block
				margin-left 20px
				font-size 1.1em
				a
					color #000
					text-decoration none
					
					span
						font-size .95em
						margin-left 10px
						transition(.1s)
						
						&:hover
							color azul
/*------------------------------------------------------------------------------------ about*/

.about
	width 70%
	margin 0 auto
	margin-top 120px
	.title
		text-align center
		margin-bottom 30px

	.content
		text-align justify
		font-weight 300
		a
			color azulsuave
			transition(.1s)
			&:hover
				text-decoration none
				color azul
/*------------------------------------------------------------------------------------ servicios*/
.title_s
	margin-top 120px
	margin-bottom 20px
	text-align center
	h2
		font-size 1.9em
.serv4
	width 95%
	margin-top 60px
	.ico
		text-align center
		font-size 2.5em
		span
			color azulsuave
	.name
		text-align center
		h4
			font-size 1.8em
	.text
		text-align justify
		font-size .95em
		margin-top 20px
/*------------------------------------------------------------------------------------ proyectos*/		
.title_p
	margin-top 40px
	text-align center
	margin-bottom 60px
	h2
		font-size 1.9em
.proyectos
	width 95%
	margin 0 auto
	border solid 2px #efefef
/*------------------------------------------------------------------------------------ expert*/
.expertos
	img
		margin 50px auto
/*------------------------------------------------------------------------------------ contacto*/
#contacto
	background-image url(assets/emperadores.png)
	background-repeat no-repeat
	background-size contain
	height 712px
	.title
		color #fff
		text-align center
		position relative
		top 40px
		h2
			font-size 2.2em
			font-weight 400
			
	.subtitle
		color #fff
		text-align center
		position relative
		top 40px
		margin-bottom 100px
		
.form-contact
		margin 0 auto
		width 55%
		form
			.btn-azul
				background rgba(76,208,244,.75);
				width 97%
				font-size 1em
				transition(.2s)
				&:hover
					background rgba(239,239,239,.75);
				
			input
				background-color rgba(0,0,0,0.49);
				border none
				padding 5px
				margin 5px
				border-radius(5px)
				color #fff
textarea
	width 97%
	margin-left 5px
	border-radius(5px)
	height 120px
	margin-top 5px
	background-color rgba(0,0,0,0.49);
	color #fff
	border none
.social
	text-align center
	margin-top 170px
	font-size 2em
	a
		transition(.2s)
		&:hover
			text-decoration none
.tri
	background-image url(assets/blanco.png)
	background-position 50% 0
	background-repeat no-repeat
	margin-top 20px
	width 100%
	height auto
	
.flecha
	text-align center
	position relative
	top -20px
	a
		color azul
		transition(.2s)
		&:hover
			color azulsuave
	
footer
	background-color #fff
	padding 30px 0
	text-align center

		
	
		
						