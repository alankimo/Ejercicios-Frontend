@import 'vars.styl'
@import 'bootstrap/css/bootstrap.min.css'

/*---------------------------------------------------------------------------------------------> generales*/
h3
	padding-top 0
	margin-top 0
.btn-menta
	background-color #51a279
	color #fff
	text-transform uppercase
#pas
	color pasto
/*---------------------------------------------------------------------------------------------> header*/
header
	margin-top 44px
	.navbar
		text-align right
		nav
			ul
				li
					display inline-block
					margin-left 40px
					a
						color #272a21
					:hover
						color #79b496
						text-decoration none
						
/*---------------------------------------------------------------------------------------------> middle*/
#middle
	.boton
		position relative
		text-align right
		top 40px
	.franja
		background-color #e0f1e1
		margin-top 36px
		.show
			margin-top 40px
			margin-bottom 60px
			.icono
				color pasto
				
			.text
				p
					text-align justify
/*-------------------------------------------------------------------------------------------> project*/
#project
	margin-top 20px
	margin-bottom 50px
	.title
		color #272a21
	.enlaces
		position relative
		top 20px
		a
			color pasto
			font-size 1.1em
.pro
	margin-top 20px
	.title
		margin 5px 0
		a
			color pasto
	.more
		margin-bottom 40px
		
		a
			color pasto
			font-size 1.2em
/*-------------------------------------------------------------------------------------------> post*/
.enlaces
	text-align right
	
.post
	.title
		margin-top 20px
		a
			color pasto
	.more
		a
			color pasto
	
.action
	background-color #565950
	padding 40px 0
	
	.barra
		margin 0 auto
		text-align center
		color #fff
		.description
			padding 10px 0
				
