
@import 'vars.styl'
/*--------------------------------------------------------------------------------------- generales */
body
	font-family open
.red-boton
	background-color rojo
	padding 10px 15px
	&:hover
		background-color transparent
		border 2px solid rojo
		transition(2s)
h2
	font-weight 300
	text-transform uppercase
	font-size 3em
	text-align center
/*--------------------------------------------------------------------------------------- fotofondo */

.fotofondo
	background-image url("assets/back.jpg")
	background-size contain
	background-repeat no-repeat
	//background-attachment absolute
	height 100%
	z-index 1
	position absolute
	top 12%
	width 100%
/*--------------------------------------------------------------------------------------- header */	
header
	background #000
	position relative
	z-index 2
	padding 5% 0
			
	.trigger-menu
		color #fff
		text-align right
		margin-top 1px
		
	.navbar
		display none
/*--------------------------------------------------------------------------------------- interior */
.interior
	position relative
	z-index 2
	text-align center
	text-transform uppercase
	padding-top 10%
	.text
		font-size 1.1em
		color #fff
		font-weight 300
/*--------------------------------------------------------------------------------------- donate */
.fofondos
	background-image url("assets/donate.jpg")
	background-size cover
	background-repeat no-repeat
	height 2%
	.title
		margin-top 35%
		color #fff
	.subtitle
		position relative
		top 28%
		color #fff
		text-align center
		font-size 1.5em
		text-transform uppercase
		margin-bottom 17%
.col3
	margin-bottom 30px
	background-color #fff
	border solid 1px #fff
	.titulo
		color verde
		font-size 1.5em
		margin-left 3%
		margin-bottom 2%
		margin-top 10%
	.image
		img
			margin 0 auto
	.description
		margin-left 3%
		margin-right 2%
		color gris
	.item01
		text-align center
		color verde
		padding 5%
		font-size 1em
.botonchico
	
	position relative
	top 10%
	text-align center
	margin-bottom 10%
	a
		background-color #000
		display inline-block
		font-size 1em
		color #fff
		padding 5% 15%
		margin 0 auto
/*--------------------------------------------------------------------------------------- contacto */
.contacto
	margin-top 20%
	margin-bottom 20%
	.subtitle
		text-align center
		color gris
		font-size 1.2em
.mapa
	margin 10% 0
	padding 2%
	border solid 1px gris

.titlecon
	h4
		font-weight 600
		color verde
		margin-bottom 10%
		
input
	padding 5%
	color verde
	width 100%
	margin-bottom 5%
.grande
	height 140px
	
.botonmenta
	margin-top 30px
	a
		font-weight 600
		color #fff
		background-color menta
		border solid 2px menta
		border-radius(4px)
		padding 20px 60px
		transition(.2s)
/*--------------------------------------------------------------------------------------- footer */

footer
	background-color #000
	color #fff
	text-align center
	padding 3% 0
